@model ICollection<Test>

@{
    ViewData["Title"] = "Main Page";
    
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">@item.name</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <p class="font-monospace">
                                Number of questions: @item.questions.Count
                            </p>
                        </div>
                        <div class="d-flex flex-fill">
                            <div class="p-2 w-50" style="font-weight:bold;">
                                @item.creationDate
                            </div>
                            <div class="p-2 w-50 d-flex justify-content-center">
                                <button type="button" class="btn btn-lg btn-block btn-outline-primary">Start</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
